<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="stock_view_production_lot_form_extend_alsokhon_period" model="ir.ui.view">
            <field name="name">stock.production.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                  <field name="carat" invisible="1" attrs="{'invisible':[('diamond','!=',True)]}"/>
                  <field name="carat_wt" invisible="1" attrs="{'invisible':[('diamond','!=',True)]}"/>

                  <field name="diamond" invisible="1"/>
                    <field name="gold" invisible="1"/>
                    <field name="gross_weight" readonly="1" force_save="1" attrs="{'invisible':[('gold','!=',True)]}"/>
                    <field name="purity" readonly="1" force_save="1" attrs="{'invisible':[('gold','!=',True)]}"/>
                    <field name="purity_id" readonly="1" force_save="1" attrs="{'invisible':[('gold','!=',True)]}"/>
                    <field name="pure_weight" readonly="1" force_save="1" attrs="{'invisible':[('gold','!=',True)]}"/>
                    <field name="remaining_weight" readonly="1" force_save="1" invisible="1"/>
                    <field name="item_category_id" readonly="1" force_save="1"/>
                    <field name="sub_category_id" readonly="1" force_save="1"/>
                    <field name="selling_karat_id" readonly="1" force_save="1"/>
                    <field name="selling_making_charge" widget="monetary" readonly="1" force_save="1"/>
                </field>
            </field>
        </record>

        <record id="stock_view_production_lot_tree_extend_alsokhon_period" model="ir.ui.view">
            <field name="name">stock.production.lot.tree</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                  <field name="carat" invisible="1" attrs="{'column_invisible':[('diamond','!=',True)]}"/>
                  <field name="carat_wt" invisible="1" attrs="{'column_invisible':[('diamond','!=',True)]}"/>

                  <field name="gold" invisible="1"/>
                    <field name="diamond" invisible="1"/>
                    <field name="gross_weight" invisible="1" attrs="{'column_invisible':[('gold','!=',True)]}"/>
                    <field name="purity" invisible ="1" attrs="{'column_invisible':[('gold','!=',True)]}"/>
                    <field name="is_scrap" invisible ="1" attrs="{'column_invisible':[('gold','!=',True)]}"/>
                    <field name="pure_weight" attrs="{'column_invisible':[('gold','!=',True)]}"/>
                    <field name="item_category_id" invisible ="1"/>
                    <field name="sub_category_id" invisible ="1"/>
                    <field name="selling_karat_id" invisible ="1"/>
                    <field name="selling_making_charge" widget="monetary" invisible ="1"/>
              </field>
            </field>
        </record>

    </data>
</odoo>
